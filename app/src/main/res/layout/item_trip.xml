<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/text_trip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip ID"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_driver_name" />

    <TextView
        android:id="@+id/text_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Name"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintTop_toBottomOf="@+id/text_trip_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_driver_phone_number" />

    <TextView
        android:id="@+id/text_driver_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Phone Number"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_cab_number" />

    <TextView
        android:id="@+id/text_cab_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cab Number"
        android:textAppearance="?android:attr/textAppearanceListItem"
        app:layout_constraintTop_toBottomOf="@+id/text_driver_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
